<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edita_pedido"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ar.com.smartnet.tp_final_v2.EditaPedidoActivity">

    <EditText
        android:id="@+id/editCliente"
        android:layout_width="wrap_content"
        android:layout_height="?attr/listPreferredItemHeight"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="@string/client"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/editCliente"
        android:background="#2e000000"
        android:id="@+id/separador1"
        />

    <Button
        android:text="..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/editCliente"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:id="@+id/button"
        android:layout_above="@+id/separador1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />
    <EditText
        android:id="@+id/editCodigo"
        android:layout_width="wrap_content"
        android:layout_height="?attr/listPreferredItemHeight"
        android:layout_below="@id/separador1"
        android:hint="@string/code"
        />


    <EditText
        android:id="@+id/editPrecio"
        android:layout_width="wrap_content"
        android:layout_height="?attr/listPreferredItemHeight"
        android:hint="@string/cost"
        android:layout_below="@+id/separador1"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/editCantidad"
        android:layout_width="wrap_content"
        android:layout_height="?attr/listPreferredItemHeight"
        android:hint="@string/cant"
        android:layout_below="@+id/separador1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
