<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edita_pedido"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ar.com.smartnet.tp_final_v2.EditaPedidoActivity">

    <EditText
        android:id="@+id/editCliente"
        android:layout_width="wrap_content"
        android:layout_height="?attr/listPreferredItemHeight"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="@string/client"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <Button
        android:text="..."
        android:layout_width="wrap_content"
        android:layout_height="?attr/listPreferredItemHeight"
        android:layout_alignParentTop="true"
        android:id="@+id/button"
        android:layout_above="@+id/separador1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/editCliente"
        android:background="#2e000000"
        android:id="@+id/separador1"
        />


    <LinearLayout
        android:id="@+id/linear1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="?attr/listPreferredItemHeight"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >

        <EditText
                android:id="@+id/editCodigo"
                android:layout_width="wrap_content"
                android:layout_height="?attr/listPreferredItemHeight"
                android:layout_below="@id/separador1"
                android:hint="@string/code"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:layout_weight="1"
            />

        <EditText
                android:id="@+id/editCantidad"
                android:layout_width="wrap_content"
                android:layout_height="?attr/listPreferredItemHeight"
                android:hint="@string/cant"
                android:layout_below="@+id/separador1"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:layout_toLeftOf="@+id/editImporte"
                android:layout_toRightOf="@+id/editCodigo"
                android:layout_toEndOf="@+id/editCodigo"
                android:layout_weight="1"
            />

        <EditText
                android:id="@+id/editImporte"
                android:layout_width="wrap_content"
                android:layout_height="?attr/listPreferredItemHeight"
                android:hint="@string/amount"
                android:layout_below="@+id/separador1"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:layout_toLeftOf="@+id/btnAdd"
                android:layout_weight="1"
            />

        <Button
                android:text="+"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/btnAdd"
                android:layout_above="@+id/listPedido"
                android:layout_weight="1"
            />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/linear1"
        android:background="#2e000000"
        android:id="@+id/separador2"
        />

    <ListView
        android:id="@+id/listPedido"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/editCliente"
        android:layout_above="@+id/linear1">
    </ListView>



</RelativeLayout>
